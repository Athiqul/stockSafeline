<!DOCTYPE html>
<html lang="en">
  
<%-include('../includes/adminHeader.ejs')%>
  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <ul
        class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion"
        id="accordionSidebar"
      >
        <%- include('../includes/adminSidebar.ejs')%>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <nav
            class="navbar navbar-expand navbar-light bg-white topbar mb-4 fixed-top shadow"
          >
            <!-- Sidebar Toggle (Topbar) -->
            <button
              id="sidebarToggleTop"
              class="btn btn-link d-md-none rounded-circle mr-3"
            >
              <i class="fa fa-bars"></i>
            </button>

            <%-include('../includes/adminNav.ejs')%>

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Products List</h1>
              <div class="buttons">
                <!-- Add new Button -->
                <button
                  type="button"
                  class="btn btn-primary shadow"
                  data-toggle="modal"
                  data-target="#addModalCenter"
                >
                  <i class="fas fa-download fa-sm text-white-50 pr-2"></i>Add
                  New
                </button>
                <!-- Update Button -->
                <button
                  type="button"
                  class="btn btn-success shadow"
                  data-toggle="modal"
                  data-target="#updateModalCenter"
                >
                  <i class="fas fa-upload fa-sm text-white-50 pr-2"></i>Update
                </button>
              </div>

              <!-- Add New Modal -->
              <div
                class="modal fade"
                id="addModalCenter"
                tabindex="-1"
                role="dialog"
                aria-labelledby="addModalCenterTitle"
                aria-hidden="true"
              >
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                      <h5 class="modal-title" id="addModalCenterTitle">
                        Product Information
                      </h5>
                      <button
                        type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close"
                      >
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form method="POST" action="/admin/addNewProduct">
                        <div class="form-row">
                          <div class="form-group col-md-6">
                            <label for="pTitle">Product Title</label>
                            <input
                              type="text"
                              class="form-control"
                              id="pTitle"
                              placeholder="Product Title..."
                              name="productName"
                              required
                            />
                          </div>
                          <div class="form-group col-md-6">
                            <label for="pBrand">Brand</label>
                            <input
                              type="text"
                              class="form-control"
                              id="pBrand"
                              placeholder="Product Brand..."
                              name="brandName"
                              required
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="pUnitType">Unit</label>
                            <div class="input-group mb-3">
                              <div class="input-group-prepend">
                                <select
                                  class="btn btn-outline-secondary dropdown-toggle"
                                  id="pUnitType"
                                  name="unit"
                                  required
                                >
                                  <option value="Gram" selected>Gram</option>
                                  <option value="ML">ML</option>
                                  <option value="Kg">Kg</option>
                                  <option value="Litre">Litre</option>
                                  <option value="Box">Box</option>
                                  <option value="Pcs">Pcs</option>
                                </select>
                              </div>
                              <input
                                type="number"
                                class="form-control"
                                aria-label="Text input with dropdown button"
                                placeholder="0"
                                name="unitMeasure"
                                step="0.01"
                                required
                              />
                            </div>
                          </div>
                          <div class="form-group col-md-8">
                            <label for="pCategory">Category</label>
                            <select
                              class="custom-select mr-sm-2"
                              id="pCategory"
                              name="catagory"
                              required
                            >
                              <option selected>Choose...</option>
                              <%category.forEach(a=>{%>
                              <option value="<%=a.name%>"><%=a.name%></option>
                              <%})%>
                            </select>
                          </div>
                          <div class="form-group col-md-12">
                            <label for="pDescription"
                              >Product description</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="pDescription"
                              placeholder=""
                              name="productDescription"
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="pBuyPrice">Unit Cost</label>
                            <input
                              type="number"
                              class="form-control"
                              id="pBuyPrice"
                              placeholder=""
                              step="0.00"
                              name="unitCost"
                              required
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="pSellPrice">Sell Price</label>

                            <input
                              type="number"
                              class="form-control"
                              id="pSellPrice"
                              placeholder=""
                              step="0.01"
                              name="sellPrice"
                              required
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="Quantity">Quantity</label>

                            <input
                              type="number"
                              class="form-control"
                              id="Quantity"
                              placeholder=""
                              step="0.01"
                              name="quantity"
                              required
                            />
                          </div>
                          <div class="form-group col-md-8">
                            <label for="imageLink">Image Link</label>

                            <input
                              type="text"
                              class="form-control"
                              id="imageLink"
                              placeholder=""
                              name="image"
                              required
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="pArriveDate">Arrival Date</label>
                            <input
                              type="date"
                              class="form-control"
                              id="pArriveDate"
                              placeholder=""
                              name="arrivalDate"
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="pExpireDate">Expire Date</label>
                            <input
                              type="date"
                              class="form-control"
                              id="pExpireDate"
                              placeholder=""
                              name="expireDate"
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="pManufactDate">Manufacture Date</label>
                            <input
                              type="date"
                              class="form-control"
                              id="pArriveDate"
                              placeholder=""
                              name="manDate"
                            />
                          </div>
                          <div>
                            
                            <input
                              type="hidden"
                              class="form-control"
                          
                              value="<%=user._id%>"                           
                              name="userId"
                            />
                          </div>
                          
                          
                        </div>
                        <div class="modal-footer justify-content-center">
                          <button
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal"
                          >
                            Close
                          </button>
                          <button type="submit" class="btn btn-primary">
                            Save changes
                          </button>
                        </div>
                        
                      </form>
                    </div>
                  
                  </div>
                </div>
              </div>
              
            <!-- Content Row -->
            <div class="row">
              <!-- Content Column -->
              <div class="col-lg-12 mb-4">
                <!-- Order Chart -->
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-body">
                    <div class="table-responsive">
                      <%if(products.length>0){%>
                      <table
                        class="table table-bordered"
                        id="dataTable"
                        width="100%"
                        cellspacing="0"
                      >
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>View</th>
                            
                          </tr>
                        </thead>
                        <tbody>
                          <% products.forEach(a=>{%>
                          <tr>
                            <td><%= a.productName%></td>
                            <td><%= a.productCatagory%></td>
                            <td><%= a.quantity%></td>
                            <td>
                              <form action="/admin/product/:<%=a.productName%>" method="POST">
                                <input type="hidden" name="productId" value="<%=a._id%>">
                                <input type="submit" class="btn btn-success" value="View">
                              </form> 
                            </td>                            
                          </tr>
                          
              
                          <%})%>
                        </tbody>
                      </table>
                      <%} else {%>
                        <h3 class="text-center text-danger">No products</h3>
                        <%}%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

       <%-include('../includes/adminFooter.ejs')%>
  </body>
</html>
