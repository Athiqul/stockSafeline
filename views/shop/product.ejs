        <p class="text-center text-danger"><b>In Stock:</b> <%=product.quantity%></p>
        <p class="text-center">Expire date: <%=product.expireDate%></p>
        <p class="text-center">Manufacture Date: <%=product.manufactureDate%></p>
    
        <div class="col-12 lead text-center ">
            <p><%=product.description%></p>
        </div>
        
