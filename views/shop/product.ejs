    <main>
        <br><br><br>
        <div class="text-center image-container">
            <img src="<%=product.image%>" alt="Product image" class="descImage">  
        </div>    
        <h1 class="text-center text-danger mt-0"><%=product.productName%></h1>
        <hr>
        <p class="text-center text-danger"><b>Price: <%=product.unitSellPrice%> Tk.</b> </p>
